<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="headermenus">
      <div class="headermenus_customer">
        <% if customer_signed_in? %>
        <%= link_to "マイページ", public_customers_my_page_path %>
        <%= link_to "商品一覧", items_path %>
        <%= link_to "カート", public_cart_items_path %>
        <%= link_to "Log out", destroy_customer_session_path, method: :delete %>
      <% else %>
        <%= link_to "About", about_path %>
        <%= link_to "商品一覧", items_path %>
        <%= link_to "新規登録", new_customer_registration_path %>
        <%= link_to "ログイン", new_customer_session_path %>
      <% end %>
    </div>
    <div class="headermenus_admin">
      <% if admin_signed_in? %>
        <%= link_to "商品一覧", admin_items_path %>
        <%= link_to "会員一覧", admin_customers_path %>
        <%= link_to "注文履歴一覧", public_orders_path %>
        <%= link_to "ジャンル一覧", admin_genres_path %>
        <%= link_to "Log out", destroy_admin_session_path, method: :delete %>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
