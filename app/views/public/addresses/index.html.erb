<h1>配送先登録/一覧</h1>

<%= form_with model: @address,url: addresses_path, local:true do |f| %>

<h4>宛名</h4>
<%= f.text_field :name %>

<h4>郵便番号</h4>
<%= f.text_field :postal_code %>

<h4>住所</h4>
<%= f.text_field :address%>
<%= f.submit '登録' %>
<% end %>


 <% @addresses.each do |address| %>
  <p><%= address.name %></p>
  <p><%= address.postal_code %></p>
  <p><%= address.address %></p>

  <%= link_to "Edit", edit_address_path(address.id), class:"btn btn-sm btn-success" %>
  <%= link_to "Destroy", address_path(address.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>