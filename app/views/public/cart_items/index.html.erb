<h1>Public::CartItems#index</h1>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>小計</th>
  </thead>
  <tbody>

  <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= button_to "Destroy", cart_item_path(cart_item.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
  <%= button_to "全て削除" , destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
<%= @cart_items.sum(&:subtotal) %>
<%= link_to "情報入力に進む", new_order_path %>