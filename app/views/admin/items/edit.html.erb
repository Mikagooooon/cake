<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

  <%= form_with model: @item,url:admin_item_path, method: :patch, local:true do |f| %>

　　<%= f.label :商品画像 %><br />
    <%= f.file_field :image, accept:"image/*" %><br />

    <%= f.label :商品名 %><br />
    <%= f.text_field :name %><br />

    <%= f.label :商品説明 %><br />
    <%= f.text_field :introduction %><br />

    <%= f.label :税抜価格 %><br />
　　<%= f.text_field :price, data: { autonumeric: {aSign: '¥ ', mDec: 0 } } %><br />

    <%= f.submit '編集内容を保存' %>
  <% end %>