<h1>New Item</h1>
<%= flash[:notice] %>
<%= form_with model: @item, local:true do |f| %>

<h4>商品画像</h4>


<%= f.label :商品名 %><br />
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :introduction %>

<h4>ジャンル</h4>

<%= f.label :amount %><br />
<%= f.text_field :amount, data: { autonumeric: {aSign: '¥ ', mDec: 0 } } %>

<%= f.submit '新規登録' %>
<% end %>