<div class="container">
  <div claas="row">
    <div class="col-md-10 col-md-offset-1">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品id</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,"/admin/items/#{item.id}" %></td>
            <td><%= item.price %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
    </div>
  </div>
</div>
<p class="text-right"><%= link_to "新規登録", new_admin_item_path %></p>
