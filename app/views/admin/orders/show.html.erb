<div class="container">
<h3>注文履歴詳細</h3>
  <div claas="row">
    <div class="col-md-12 offset-md-1">
      <table>
          <tr>
            <th>購入者</th><td><%= @order.name %></td>
          </tr>
          <tr>
            <th>注文日</th><td><%= @order.created_at.to_s(:datetime_jp) %></td>
          </tr>
          <tr>
            <th>配送先</th><td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th><td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
          </tr>
      </table>
    </div>
  </div>
  <div class="row">
      <div class="col-md-5 offset-md-1">
          <table class="items">
              <thead>
                  <tr>
                      <th>商品名</th>
                      <th>単価（税込）</th>
                      <th>数量</th>
                      <th>小計</th>
                      <th>制作ステータス</th>
                  </tr>
              </thead>
              <tbody>
                  <% @order_history_details.each do |order_history_detail| %>
                  <tr>
                      <td><%= order_history_detail.item.name %></td>
                      <td><%= order_history_detail.unit_price %></td>
                      <td><%= order_history_detail.quantity %></td>
                      <td><%= order_history_detail.unit_price * order_history_detail.quantity %></td>
                      <td></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>